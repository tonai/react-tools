{
  "name": "react-tools",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "classnames": "2.2.6",
    "prop-types": "15.7.2",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-router-dom": "5.2.0",
    "react-scripts": "3.4.3"
  },
  "devDependencies": {
    "@babel/core": "7.11.6",
    "@storybook/addon-actions": "6.0.21",
    "@storybook/addon-essentials": "6.0.21",
    "@storybook/addon-links": "6.0.21",
    "@storybook/addon-storyshots": "6.0.21",
    "@storybook/node-logger": "6.0.21",
    "@storybook/preset-create-react-app": "3.1.4",
    "@storybook/react": "6.0.21",
    "@testing-library/react": "11.0.4",
    "@testing-library/react-hooks": "3.4.1",
    "babel-loader": "8.1.0",
    "commitlint": "11.0.0",
    "concurrently": "5.3.0",
    "cross-env": "7.0.2",
    "cypress": "5.2.0",
    "cypress-plugin-snapshots": "1.4.4",
    "enzyme": "3.11.0",
    "enzyme-adapter-react-16": "1.15.3",
    "eslint-config-prettier": "6.12.0",
    "eslint-plugin-cypress": "2.11.1",
    "husky": "4.3.0",
    "jest-fetch-mock": "3.0.3",
    "lint-staged": "10.4.0",
    "prettier": "2.1.2",
    "react-app-polyfill": "1.0.6",
    "react-is": "16.13.1",
    "stylelint": "13.7.2",
    "stylelint-config-prettier": "8.0.2",
    "stylelint-config-standard": "20.0.0",
    "typescript": "4.0.3",
    "wait-on": "5.2.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "storybook": "start-storybook -p 6006 -s public",
    "build-storybook": "build-storybook -s public",
    "cypress:test": "cross-env BROWSER=none concurrently 'npm run start' 'npm run cypress:run' -k -s first",
    "cypress:run": "wait-on http://localhost:3000 && cypress run",
    "cypress:open": "cypress open",
    "prettier": "prettier --write .",
    "eslint": "eslint --max-warnings=0 --fix './**/*.{js,jsx,ts,tsx}'",
    "stylelint": "stylelint \"./**/*.{css,scss,sass}\" --fix"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:cypress/recommended",
      "prettier"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all",
    "IE 11"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "post-checkout": "./scripts/post-checkout.sh $HUSKY_GIT_PARAMS",
      "post-merge": "npm ci",
      "post-rebase": "npm i"
    }
  },
  "lint-staged": {
    "./**/*.{js,jsx,ts,tsx}": [
      "eslint --max-warnings=0 --fix --no-ignore",
      "git add",
      "prettier --write",
      "git add",
      "cross-env CI=test react-scripts test --bail --findRelatedTests"
    ],
    "./**/*.{css,scss,sass}": [
      "stylelint --fix",
      "git add",
      "prettier --write",
      "git add"
    ],
    "./**/*.{json,md,html}": [
      "prettier --write",
      "git add"
    ]
  },
  "proxy": "http://localhost:3001"
}
